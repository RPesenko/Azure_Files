{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workflows_MissingUpdateMail_name": {
            "defaultValue": "MissingUpdateMail",
            "type": "String"
        },
        "connections_azureloganalytics_1_externalid": {
            "defaultValue": "/subscriptions/c34479e8-d241-49ec-86de-1c3edc25fa81/resourceGroups/RG_OMS_Test/providers/Microsoft.Web/connections/azureloganalytics-1",
            "type": "String"
        },
        "connections_office365_externalid": {
            "defaultValue": "/subscriptions/c34479e8-d241-49ec-86de-1c3edc25fa81/resourceGroups/RG_OMS_Test/providers/Microsoft.Web/connections/office365",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('workflows_MissingUpdateMail_name')]",
            "location": "westcentralus",
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "Recurrence": {
                            "recurrence": {
                                "frequency": "Week",
                                "interval": 1,
                                "schedule": {
                                    "weekDays": [
                                        "Wednesday"
                                    ]
                                }
                            },
                            "type": "Recurrence"
                        }
                    },
                    "actions": {
                        "Run_query_and_visualize_results": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "Update\n| where OSType != \"Linux\" and UpdateState == \"Needed\" and Optional == \"false\" and (Classification == \"Security Updates\" or Classification == \"Critical Updates\") \n| summarize by Computer, Title, KBID, MSRCBulletinID, Type \n| sort by Computer asc,  KBID desc",
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureloganalytics']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/omsVisualizeQuery",
                                "queries": {
                                    "resourcegroups": "RG_OMS_Test",
                                    "subscriptions": "c34479e8-d241-49ec-86de-1c3edc25fa81",
                                    "visType": "Html Table",
                                    "workspaces": "OMS-PMC-Test"
                                }
                            }
                        },
                        "Send_an_email_(V2)": {
                            "runAfter": {
                                "Run_query_and_visualize_results": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "Body": "<p><u><strong>Computers missing Critical and Security Updates <br>\n</strong></u><br>\n@{base64ToString(body('Run_query_and_visualize_results')?['body'])}</p>",
                                    "Subject": "Weekly Missing Patch Report",
                                    "To": "User@Contoso.com"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['office365']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/v2/Mail"
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azureloganalytics": {
                                "connectionId": "[parameters('connections_azureloganalytics_1_externalid')]",
                                "connectionName": "azureloganalytics-1",
                                "id": "/subscriptions/c34479e8-d241-49ec-86de-1c3edc25fa81/providers/Microsoft.Web/locations/westcentralus/managedApis/azureloganalytics"
                            },
                            "office365": {
                                "connectionId": "[parameters('connections_office365_externalid')]",
                                "connectionName": "office365",
                                "id": "/subscriptions/c34479e8-d241-49ec-86de-1c3edc25fa81/providers/Microsoft.Web/locations/westcentralus/managedApis/office365"
                            }
                        }
                    }
                }
            }
        }
    ]
}